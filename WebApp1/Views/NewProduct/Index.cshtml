@model IEnumerable<WebApp1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="UpCreate">Create New</a>
</p>

<form class="row g-3" asp-action="Index">
    <div class="col-auto">
        <input name="keyword" class="form-control" placeholder="name,price,amount">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Search</button>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageBase64)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.Image" width="50" class="rounded" />
                </td>
                <td>
                    <img src="@item.ImageBase64" width="50" class="rounded-pill" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="UpCreate" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('ยืนยันการลบ')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
