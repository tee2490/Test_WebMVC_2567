@model IEnumerable<Product>

<a type="button" class="btn btn-danger" asp-action="Create">

    Add
</a>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th scope="col">@Html.DisplayNameFor(p => p.Id)</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Amount</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var p in Model)
        {
            <tr>
                <th scope="row">@p.Id</th>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Amount</td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="Create" asp-route-id="@p.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@p.Id"
                       onclick="return confirm('Delete confirm')">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>



